<div class="user-login">
  <main>
    <h4>Register</h4>
    <section>
      <%= form_for @user do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "block col-12 field" %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "block col-12 field" %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "block col-12 field" %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "block col-12 field" %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "block col-12 field" %>

        <%= f.submit 'Create Account', class: "mt2 btn btn-primary mb1 bg-teal" %>
      <% end %>
    </section>
  </main>
</div>
